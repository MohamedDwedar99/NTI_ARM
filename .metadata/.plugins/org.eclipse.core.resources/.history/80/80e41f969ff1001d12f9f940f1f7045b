#ifndef ADC_ADC_INTERFACE_H_
#define ADC_ADC_INTERFACE_H_

// ADC_SR status
#define AWD        0        /*Clear by write 0*/
#define EOC        1        /*Clear by write 0*/
#define JEOC       2        /*Clear by write 0*/
#define JSTRT      3        /*Clear by write 0*/
#define STRT       4        /*Clear by write 0*/



// Channels
#define CHANNEL_0      0
#define CHANNEL_1      1
#define CHANNEL_2      2
#define CHANNEL_3      3
#define CHANNEL_4      4
#define CHANNEL_5      5
#define CHANNEL_6      6
#define CHANNEL_7      7
#define CHANNEL_8      8
#define CHANNEL_9      9

// APIs
void ADC_voidInit(void);
void ADC_voidStartConvertion(void);

#endif /* 01_MCAL_06_ADC_ADC_INTERFACE_H_ */
