#ifndef		BIT_MATH_H
#define		BIT_MATH_H


/*ADD 1 to selected BIT*/
#define		SET_BIT(REG,BIT)		(REG |=  (1<<BIT))
/*ADD 0 to selected BIT*/
#define		CLR_BIT(REG,BIT)		(REG &= ~(1<<BIT))
/*ADD 1 to selected BIT*/
#define		TOG_BIT(REG,BIT)		(REG ^=  (1<<BIT))
/*ADD 1 to selected BIT*/
#define		GET_BIT(REG,BIT)		((REG>>BIT)&0x01)

//#define		BIT_LOW					((u8)0)

#endif
