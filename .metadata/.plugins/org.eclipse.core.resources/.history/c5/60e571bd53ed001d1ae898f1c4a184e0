#ifndef RCC_CONFIG_H_
#define RCC_CONFIG_H_

#define Sys_Clock                   /* choose the clock source of the system
                                     * 1-HSI
                                     * 2-HSE
                                     * 3-PLL
                                     */

#define AHB_prescaler               /* chose the Prescaller of AHB SYSCLK_x
                                     * x = (1,2,4,8,16,64,128,256,512)
                                     */

#define APB_prescaler               /* chose the Prescaller of APB HCLK_x
                                     * x = (1,2,4,8,16)
                                     */

#define APB2                        /* chose the Prescaller of APB HCLK_x
                                     * x = (1,2,4,8,16)
                                     */

#define ADC_prescaler               /* chose the Prescaller of ADC PCLK_x
                                     * x = (1,2,4,8)
                                     */

#define PLL_source                  /* chose the entry clock to PLL
                                     * 1-HSI   note that HSI divided by 2
                                     * 2-HSE
                                     */

#define PLL_HSE_Divide              /* chose if HSE divided by 2 or not
                                     * 1- HSE_1  not divided
                                     * 2- HSE_2  divided by 2
                                     */

#define PLL_MulFactor               /* chose if PLL_Source multiply with x PLL_x
                                     * x = (2 to 16)
                                     */

#define USB_prescaler               /* chose USB_PLL clock
                                     * 1- PLL_USB1
                                     * 2- PLL_USB1_5
                                     */

#define Clock_output                /* choose if MCU generate clock source
                                     * 1- N_CO   NO clock
                                     * 2- CO_SYS
                                     * 3- CO_HSI
                                     * 4- CO_HSE
                                     */

#endif /* 01MCAL_00RCC_RCC_CONFIG_H_ */
